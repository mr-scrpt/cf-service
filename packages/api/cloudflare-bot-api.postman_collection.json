{
  "info": {
    "_postman_id": "12345678-1234-1234-1234-123456789abc",
    "name": "Cloudflare Bot API",
    "description": "API endpoints for Cloudflare Bot management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "api_auth_token",
      "value": "your_jwt_secret_here"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Health check endpoint - no authentication required"
      },
      "response": []
    },
    {
      "name": "Webhook",
      "item": [
        {
          "name": "Check Webhook Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook"]
            },
            "description": "Check if webhook endpoint is alive - no authentication required"
          },
          "response": []
        },
        {
          "name": "Send Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"test\",\n  \"data\": {\n    \"message\": \"Test webhook payload\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook"]
            },
            "description": "Send webhook notification - no authentication required"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Add User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            },
            "description": "Allow user by username (user must have interacted with bot first) - requires authentication"
          },
          "response": []
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            },
            "description": "Get all users - requires authentication"
          },
          "response": []
        },
        {
          "name": "Remove User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/:telegramId",
              "host": ["{{base_url}}"],
              "path": ["api", "users", ":telegramId"],
              "variable": [
                {
                  "key": "telegramId",
                  "value": "123456789",
                  "description": "Telegram user ID to remove"
                }
              ]
            },
            "description": "Remove user by Telegram ID - requires authentication"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Registration Requests",
      "item": [
        {
          "name": "Create Registration Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"telegramId\": 123456789,\n  \"username\": \"john_doe\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/registration-requests",
              "host": ["{{base_url}}"],
              "path": ["api", "registration-requests"]
            },
            "description": "Create a new registration request (typically called from bot when user clicks Request Access button) - requires authentication"
          },
          "response": []
        },
        {
          "name": "List Pending Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/registration-requests/pending",
              "host": ["{{base_url}}"],
              "path": ["api", "registration-requests", "pending"]
            },
            "description": "Get all pending registration requests for admin review - requires authentication"
          },
          "response": []
        },
        {
          "name": "Approve Registration Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reviewedBy\": \"admin_username\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/registration-requests/:requestId/approve",
              "host": ["{{base_url}}"],
              "path": ["api", "registration-requests", ":requestId", "approve"],
              "variable": [
                {
                  "key": "requestId",
                  "value": "paste-request-uuid-here",
                  "description": "Registration request UUID from pending list"
                }
              ]
            },
            "description": "Approve a pending registration request - creates User and notifies user via Telegram - requires authentication"
          },
          "response": []
        },
        {
          "name": "Reject Registration Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reviewedBy\": \"admin_username\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/registration-requests/:requestId/reject",
              "host": ["{{base_url}}"],
              "path": ["api", "registration-requests", ":requestId", "reject"],
              "variable": [
                {
                  "key": "requestId",
                  "value": "paste-request-uuid-here",
                  "description": "Registration request UUID from pending list"
                }
              ]
            },
            "description": "Reject a pending registration request - notifies user via Telegram - requires authentication"
          },
          "response": []
        }
      ]
    }
  ]
}
