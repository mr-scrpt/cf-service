{
  "info": {
    "_postman_id": "12345678-1234-1234-1234-123456789abc",
    "name": "Cloudflare Bot API",
    "description": "API endpoints for Cloudflare Bot management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "api_auth_token",
      "value": "your_api_token_here"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Health check endpoint - no authentication required"
      },
      "response": []
    },
    {
      "name": "Webhook",
      "item": [
        {
          "name": "Check Webhook Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook"]
            },
            "description": "Check if webhook endpoint is alive - no authentication required"
          },
          "response": []
        },
        {
          "name": "Send Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"test\",\n  \"data\": {\n    \"message\": \"Test webhook payload\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/webhook",
              "host": ["{{base_url}}"],
              "path": ["api", "webhook"]
            },
            "description": "Send webhook notification - no authentication required"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Add User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"telegramId\": 123456789,\n  \"username\": \"john_doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            },
            "description": "Add or re-enable a user - requires authentication"
          },
          "response": []
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            },
            "description": "Get all users - requires authentication"
          },
          "response": []
        },
        {
          "name": "Remove User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users/:telegramId",
              "host": ["{{base_url}}"],
              "path": ["api", "users", ":telegramId"],
              "variable": [
                {
                  "key": "telegramId",
                  "value": "123456789",
                  "description": "Telegram user ID to remove"
                }
              ]
            },
            "description": "Remove user by Telegram ID - requires authentication"
          },
          "response": []
        }
      ]
    }
  ]
}
